                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.ParkName, new { htmlAttributes = new { @class = "col-xs-10" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>景点简介： </label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.ParkInto, 5, 90, new { })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>购物： </label>
