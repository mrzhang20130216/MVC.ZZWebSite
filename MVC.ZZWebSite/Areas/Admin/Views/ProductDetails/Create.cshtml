                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>购物内容： </label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.ShoppingContent, 5, 90, new { })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>城市名称： </label>
                            <div class="col-sm-9">
                                <div class="layui-form-item">
                                    <div class="layui-input-inline">
                                        <select name="Province">
                                            <option value="">请选择省</option>
                                            <option value="浙江" selected="">浙江省</option>
                                            <option value="你的工号">江西省</option>
                                            <option value="你最喜欢的老师">福建省</option>
                                        </select>
                                    </div>
                                    <div class="layui-input-inline">
                                        <select name="City">
                                            <option value="">请选择市</option>
                                            <option value="杭州">杭州</option>
                                            <option value="宁波">宁波</option>
                                            <option value="温州">温州</option>
                                            <option value="温州">台州</option>
                                            <option value="温州">绍兴</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>参观时间： </label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.VisitTime, new { htmlAttributes = new { @class = "col-xs-10" } })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>备注： </label>
                            <div class="col-sm-9">
                                @Html.TextAreaFor(model => model.Remark, 5, 90, new { })
                            </div>
                        </div>
                        <div class="Button_operation">
                            <input id="btnSave" type="button" value="保存" class="btn btn-primary radius" />
                            <a href="javascript:;" onclick="cls()" class="btn btn-default radius" type="button">&nbsp;&nbsp;取消&nbsp;&nbsp;</a>
                        </div>
                    </div>
                </div>
            </div>
    </div>


}

<script>
    function cls() {
        layer.confirm('取消当前操作？', function (index) {
            var index = parent.layer.getFrameIndex(window.name);
            parent.layer.close(index);
        }
        )
    }

</script>

