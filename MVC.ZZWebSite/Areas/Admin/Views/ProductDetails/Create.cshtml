                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Pic, "imgupload")
                                @*@Html.EditorFor(model => model.Pic, new { htmlAttributes = new { @class = "col-xs-10" } })*@
                            </div>
                        </div>

                        <div class="form-group">
