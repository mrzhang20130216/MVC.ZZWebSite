@model MVC.ZZAdminModels.productDetails

<script src="~/assets/layui/layui.js"></script>
<link href="~/assets/layui/css/layui.css" rel="stylesheet" />
<script type="text/javascript">
    $(function () {
        $("#btnSave").click(function () {
            $.ajax({
                url: "/Admin/ProductDetails/Create",
                type: "Post",
                data: $("form").serialize(),
                dataType: "json",
                success: function (data) {
                    if (data == 1) {
                        layer.msg('新增线路成功!', { icon: 1, time: 1000 });
                        setTimeout(function () {
                         var index = parent.layer.getFrameIndex(window.name);
                         parent.layer.close(index);
                        }, 1000);
                    }
                    else {
                        layer.msg('新增线路失败！请稍后再试!', { icon: 1, time: 1000 });
                    }
                }
            });
        });
    });
</script>

@using (Html.BeginForm("Create", "ProductDetails", FormMethod.Post, new { @class = "layui-form" }))
{
    <div class="margin clearfix">
            @Html.HiddenFor(model => model.Id)
            <div class="stystems_style">
                <div class="tab-content">
                    <div id="home" class="tab-pane active">
                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>行程天数： </label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.DaysType, new { htmlAttributes = new { @class = "col-xs-10" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>内容： </label>
                            <div class="col-sm-9">
                                <div class="layui-input-block" style="margin-left:0px;">
                                    @Html.EditorFor(model => model.Content, "ckeditor")
                                    @*@Html.TextAreaFor(model => model.Content, 0, 0, new { @class = "layui-textarea layui-hide", @id = "LAY_demo_editor" })*@
                                </div>
                               
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-1 control-label no-padding-right" style="width: 10%;" for="form-field-1"><i>*</i>用餐： </label>
                            <div class="col-sm-9">
                                @Html.EditorFor(model => model.Rice, new { htmlAttributes = new { @class = "col-xs-10" } })
                            </div>
                        </div>

                        <div class="form-group">
