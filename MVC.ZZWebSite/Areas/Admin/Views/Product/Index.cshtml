@model PagedList<MVC.ZZAdminModels.product>
@{
    ViewBag.Title = "产品列表";
}
<script src="~/scripts/jquery-1.8.2.min.js"></script>
<script src="~/scripts/jquery.easyui.min.js"></script>
<script src="~/scripts/jquery.easyui.plus.js"></script>
<link href="~/Content/easyui.css" rel="stylesheet" />
<script src="~/scripts/home.js"></script>
<div class="page-content clearfix">
    <div id="Member_Ratings">
        <div class="d_Confirm_Order_style">
            @*搜索框*@
            <div class="search_style">
                <div class="title_names">搜索查询</div>
                <ul class="search_content clearfix">

                    @using (Ajax.BeginForm("AjaxSearchPost", new RouteValueDictionary { { "id", "" } }, new AjaxOptions { UpdateTargetId = "articles", InsertionMode = InsertionMode.Replace }, new RouteValueDictionary { { "id", "searchForm" } }))
                    {
                        <li><label class="l_f">关键字</label><input  name="title" id="title" type="text" class="text_add" placeholder="输入关键字" style=" width:200px" /></li>
                        <li><label class="l_f">开始时间</label><input class="inline laydate-icon" id="start" runat="server" style="margin-left: 10px;" /></li>
                        <li><label class="l_f">结束时间</label><input class="inline laydate-icon" id="end" runat="server" style="margin-left: 10px;" /></li>
                        <li style="width:90px;">
                            @*<div class="btn_search" id="btn_searchP" style="cursor: pointer;" onclick="SClick()">搜索</div>*@
                            <input type="submit" value="搜索(S)"  class="btn_search" id="btn_searchP" accesskey="S" />
                        </li>
                        @*<span>标题：</span>
                        <input type="text" name="title" id="title" style="width:120px" />
                        <span>作者：</span>
                        <input type="text" name="author" id="author" style="width:120px" />
                        <span>（如：Webdiyer）</span>
                        <span>来源：</span>
                        <input type="text" name="source" id="source" style="width:120px" />
                        <span>（如：吴起热线）</span>
                        <input type="submit" value="搜索(S)" accesskey="S" />*@
                    }
                   
                </ul>
            </div>
            @*操作框*@
            <div class="border clearfix">
                <span class="l_f">
                    <a href="/product/addlist.aspx" class="btn btn-warning"><i class="icon-plus"></i>添加产品</a>
                    <a href="javascript:;" id="administrator_add" class="btn btn-warning add"><i class="icon-plus"></i>添加线路</a>
                    <a href="javascript:;" onclick="member_del(this,'0')" class="btn btn-danger"><i class="icon-trash"></i>批量删除</a>
                </span>
                <span class="r_f">共：<b>@Model.Count</b>条</span>
            </div>
            @*数据框*@
            <div class="table_menu_list">
                @using (Html.BeginForm())
            {
                    <table id="List"  class="table table-striped table-bordered table-hover" id="sample-table">
                        <thead>
                            <tr>
                                <th>产品编号</th>
                                <th>产品标题</th>
                                <th>创建时间</th>
                                <th>价格</th>
                                <th>有效时间</th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Number</td>
                                    <td>@item.Title </td>
                                    <td>@item.CreateTime</td>
                                    <td>@item.Price</td>
                                    <td>@item.ConfimTime</td>
                                </tr>
                            }
                        </tbody>
                        </table>
                }

            </div>
            <div class="pagination">
                @Html.Pager(Model, new PagerOptions { PageIndexParameterName = "page"})
            </div>
</div>
    </div>
    </div>